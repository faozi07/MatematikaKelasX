<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/ic_logo_smk"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matematika Kelas X"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/hiruko_pro_regular"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="20sp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:paddingStart="30sp"
            android:paddingEnd="30sp"
            android:text="PLAY"
            android:textColor="#fff"
            android:textSize="17sp"
            android:fontFamily="@font/hiruko_pro_regular"
            android:drawableTint="#fff"
            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/ic_play"
            android:background="@drawable/btn_klik"/>

        <Button
            android:id="@+id/btnUjian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:paddingTop="15sp"
            android:paddingBottom="10sp"
            android:paddingStart="30sp"
            android:paddingEnd="30sp"
            android:text="UJIAN"
            android:textColor="#fff"
            android:textSize="17sp"
            android:fontFamily="@font/hiruko_pro_regular"
            android:background="@drawable/btn_klik2"/>
    </LinearLayout>

</RelativeLayout>
