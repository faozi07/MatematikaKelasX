<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorPrimary" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <stroke android:width="2sp" android:color="#000" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#fff"
                android:endColor="#fff"
                android:angle="270" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <stroke android:width="2sp" android:color="#000" />
        </shape>
    </item>
</selector>